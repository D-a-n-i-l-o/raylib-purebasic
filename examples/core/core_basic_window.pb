extRaylib("Congrats! You created your first window!", 190, 200, 20, ray::#COLOR_LIGHTGRAY)                ray::DrawFPS(10,10)    ray::EndDrawing()    ;----------------------------------------------------------------------------------        ; If we want to have a screenshot    If ray::IsKeyPressed(ray::#KEY_F1)        ray::TakeScreenshot("screenshots/core_basic_window.png")    EndIfWend; De-Initialization;--------------------------------------------------------------------------------------ray::CloseWindowRaylib()                ; Close window and OpenGL context;--------------------------------------------------------------------------------------